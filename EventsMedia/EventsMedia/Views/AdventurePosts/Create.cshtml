@model EventsMedia.Models.AdventurePost

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<html class="page">
<head>
    @*<link rel="stylesheet" type="text/css" href="~/css/CreatePost.css" />*@

    <style>
        body {
            background: white;
            margin: 0;
            padding:0;
        }
        
        .wrapper {
            position:absolute;
            width: 400px;
            height: 200px;
            transform: translate(-50%,-50%);
            top:50%;
            left: 50%;
            padding: 40px;
            background: rgba(0,0,0,0.5);
            text-align:center;
            box-sizing: border-box;
        }

        .wrapper input,text {
            margin-bottom: 20px;
            width:100%;
        }

        .wrapper input[type=submit] {
            border:none;
            height:30px;
            outline:none;
            color: #ffffff;
            background-color:tomato;
            border-radius: 20px;
            font-size: 15px;

        }
        h3 {
            color: white;
            text-align: center;
            font-family: Arial;
            font-size: 20px;
            margin:0;
            padding: 0 0 20px;
            font-weight: bold;
        }

        .wrapper input[type=text] {
            border: none;
            border-bottom: 1px solid #ffffff;
            background-color: transparent;
            outline: none;
            height: 40px;
            color: #ffffff;
        }

        ::-webkit-input-placeholder { /* Chrome/Opera/Safari */
            color: white;
            font-family:Arial;
            font-size:15px;
        }

    </style>
</head>
<body>
    <div class="wrapper">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3>New Adventure</h3>
            <input asp-for="PostTitle" type="text" placeholder="Title" class="form-control" />
            <span asp-validation-for="PostTitle" class="text-danger"></span>
            <div>
                <input type="submit" value="Create" id="sub" class="btn" style="margin-top: 20px;" />
            </div>
        </form>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
</body>
</html>


<script type="text/javascript">
    $(document).ready(function () {
        $("#sub").click(function () {
            alert("hello");
            $.ajax({
                type: 'GET',
                url: '/AdventurePosts/Create',
                success: function (data) {
                    $(".page").html(data);
                },
                failure: function () {
                    console.log("Noooooo...");
                }
            });
        });
    });
</script>


