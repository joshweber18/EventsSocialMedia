@model EventsMedia.Models.ViewModel
@{
    ViewData["Title"] = "YourProfile";
    Layout = null;
}

<html class="home">
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.0/css/all.css" integrity="sha384-Mmxa0mLqhmOeaE8vgOSbKacftZcsNYDjQzuCOm6D02luYSzBG8vpaOykv9lFQ51Y" crossorigin="anonymous">
    <link href="~/css/Profile.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-red.css" />

</head>
<body>

    <div class="row">
        <i class="fab fa-autoprefixer" style="font-size:50px; margin:25px; color:red;"></i>
        <div class="name">@Html.DisplayFor(modelitem => modelitem.User.FirstName) @Html.DisplayFor(modelitem => modelitem.User.LastName)</div>
        <a class="btn" style="font-size:50px; margin-left:900px; margin-top:20px;"><span class="fas fa-home" id="4"></span></a>
    </div>

    <header>
        <div class="container">
            <nav>
                <ul>
                    <li><button type="button" id="6" class="btn btn-outline-primary" style="font-size:20px; margin:10px; color:white;">Liked Adventures</button></li>
                    <li><button type="button" id="7" class="btn btn-outline-primary" style="font-size:20px; margin:10px; color:white;">Favorite Events</button></li>
                    <li><button type="button" id="5" class="btn btn-outline-primary" style="font-size:20px; margin:10px; color:white;">Posted Adventures</button></li>
                </ul>
            </nav>
        </div>
    </header>

    <div style="margin:20px;"></div>


    <div class="place"></div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script src="http://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>

</body>
</html>

<script type="text/javascript">

    $(document).ready(function () {
        $("#7").click(function () {
            console.log("hey");
            $.ajax({
                type: 'GET',
                url: '/FavoriteEvents/Index',
                success: function (data) {
                    $(".place").html(data);
                },
                failure: function () {
                    console.log("Noooooo...");
                }
            });
        });
    });

    $(document).ready(function () {
        $("#6").click(function () {
            $.ajax({
                type: 'GET',
                url: "/Adventures/LikedPosts",
                success: function (data) {
                    $(".place").html(data);
                },
                failure: function () {
                    console.log("Noooooo...");
                }
            });
        });
    });

    $(document).ready(function () {
        $("#5").click(function () {
            $.ajax({
                type: 'GET',
                url: "/AdventurePosts/PostedAdventures",
                success: function (data) {
                    $(".place").html(data);
                },
                failure: function () {
                    console.log("Noooooo...");
                }
            });
        });
    });

    $(document).ready(function () {
        $("#4").click(function () {
            window.history.pushState('obj', 'PageTitle', '/Home/Index');
            location.reload(true);
            $.ajax({
                type: 'GET',
                url: "/Home/Index",
                success: function (data) {
                    $(".home").html(data);
                },
                failure: function () {
                    alert("failure");
                }
            });
        });
    });
</script>


