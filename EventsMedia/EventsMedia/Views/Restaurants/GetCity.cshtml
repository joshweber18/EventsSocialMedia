@model EventsMedia.Models.GeocodeGoogle

@{
    ViewData["Title"] = "GetCity";
}


<html id="row2">
<head>
    <style>
        .textbar {
            text-align:center;
            padding-top: 180px;
        }

        .submitbtn {
            color:white;
            background-color:black;
        }

    </style>

    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    <script src="jquery.min.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
</head>
<body>
    <div class="textbar col-xs-12">
        <div class="form-group">
            <h1 style="padding-bottom:50px; font-family:Ebrima;">Search for a city near you...</h1>
            <label for="Search a City" class="control-label"></label>
            <input type="text" id="location" name="location" />
            <input id="btn" class="submitbtn" type="submit" value="Submit" />
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>

</body>
</html>



<script type="text/javascript">

    $(document).ready(function () {
        $("#btn").click(function () {
            var city = $("#location").val();
            $.ajax({
                type: 'POST',
                data: { "location": city },
                url: "/Restaurants/GetCity",
                success: function (data) {
                    $("#row2").html(data);
                }
            });
        })
    })

</script>

